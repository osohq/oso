{
  "version": "0.1.1",

  "name": "oso",
  "displayName": "Oso",
  "author": "Oso Security Inc.",
  "publisher": "osohq",
  "icon": "oso_logo.png",
  "description": "Support for Oso policies written in Polar.",
  "keywords": ["authorization", "access control", "multi-root ready"],
  "categories": ["Programming Languages"],

  "repository": {
    "type": "git",
    "url": "https://github.com/osohq/oso"
  },
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.43.0"
  },

  "activationEvents": ["onLanguage:polar"],
  "contributes": {
    "languages": [
      {
        "id": "polar",
        "aliases": [
          "Polar",
          "polar"
        ],
        "extensions": [
          ".polar"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "polar",
        "scopeName": "source.polar",
        "path": "./syntaxes/polar.tmLanguage.json"
      }
    ]
  }
}
