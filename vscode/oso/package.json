{
  "version": "0.1.1",
  "name": "oso",
  "displayName": "Oso",
  "author": "Oso Security Inc.",
  "publisher": "osohq",
  "icon": "oso_logo.png",
  "description": "Support for Oso policies written in Polar.",
  "keywords": [
    "authorization",
    "access control",
    "multi-root ready"
  ],
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/osohq/oso"
  },
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.52.0"
  },
  "main": "./client/out/src/extension",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "polar",
        "aliases": [
          "Polar",
          "polar"
        ],
        "extensions": [
          ".polar"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "polar",
        "scopeName": "source.polar",
        "path": "./syntaxes/polar.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Polar Analyzer configuration",
      "properties": {
        "polarAnalyzer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc --build",
    "watch": "tsc --build --watch",
    "clean": "gts clean",
    "lint": "gts lint -- . --max-warnings 0",
    "fmt": "prettier --write 'client/**/*.ts' 'server/**/*.ts'",
    "fmtcheck": "prettier --check 'client/**/*.ts' 'server/**/*.ts'",
    "fix": "gts fix",
    "postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
    "test": "yarn compile && node ./client/out/test/runTest.js",

    "vscode:prepublish": "yarn esbuild-server -- --minify && yarn esbuild-client -- --minify",
    "esbuild-server": "esbuild ./server/src/server.ts --bundle --outfile=server/out/server.js --external:vscode --format=cjs --platform=node --analyze",
    "esbuild-client": "esbuild ./client/src/extension.ts --bundle --outfile=client/out/main.js --external:vscode --format=cjs --platform=node --analyze",
    "esbuild": "esbuild-server -- --sourcemap && esbuild-client -- --sourcemap"
  },
  "devDependencies": {
    "esbuild": "^0.13.14",
    "gts": "^3.1.0",
    "typescript": "^4.4.3",
    "vsce": "^2.3.0"
  }
}
